@model IEnumerable< SMS.Models.Section>
    @{
        ViewBag.Title = "ViewSection";
        Layout = null;
    }
<table class="table table-bordered">
    <tr>
       
        <th>Section</th>
        <th>Action</th>
    </tr>
    @* Loop Over Section Thats Why the section Show *@
    @foreach (var item in Model)
    {
    <tr>

        <td>@item.Name</td>
        <td>
            <button class="btn btn-warning btn-edit" data-id="@item.SectionId"><i class="glyphicon glyphicon-pencil"></i></button>
            <button class="btn btn-warning btn-delete" data-id="@item.SectionId"><i class="glyphicon glyphicon-trash"></i></button>
            <button class="btn btn-info "><i class="glyphicon glyphicon-user"></i><a href="http://localhost:60487/Admin/students/Index?section_id=@item.SectionId&class_id=@Request.Params["class_id"]">Students</a></button>
            <button class="btn btn-info "><i class="glyphicon glyphicon-user"></i><a href="http://localhost:60487/Admin/AssignTeacher/ViewTeacher?section_id=@item.SectionId&class_id=@Request.Params["class_id"]">Teachers</a></button>
        </td>
    </tr>
    }
</table>