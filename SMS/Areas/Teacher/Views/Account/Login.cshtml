
@model SMS.Models.Teacher
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/css/adminstyle.css">
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body class="bg">

    <div class="box">


        <h1>Login</h1>

        @using (Html.BeginForm())
        {
        <div class="form-group">
            <input type="text" name="ThFirstName" value="" class="form-control" placeholder="Username" required />

            @*@Html.TextBox("ThFirstName", null, new { @class = "form-control", placeholder = "Username" })*@
            @Html.ValidationMessageFor(x => x.ThFirstName, null, new { @class = "text-danger" })
        </div>

            <div class="form-group">

                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
            </div>

            



            <input type="submit" value="Login" />

        }

    </div>




</body>
</html>
